{
    "compileOnSave": false,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext", "es6"],
      "jsx": "react",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": false,
      "sourceMap": true,
      "allowJs": true,
      "esModuleInterop": true,
      "types": ["node"]
    },
    "include": ["src/**/*"]
  }